---
import type { Props } from '@astrojs/starlight/props'
import Default from '@astrojs/starlight/components/Head.astro'
import { getCldOgImageUrl } from '../../../astro-cloudinary/helpers';

// Get the URL of the generated image for the current page using its
// ID and replace the file extension with `.png`.

const { slug, entry } = Astro.props;
const { title, ogImageTitle } = entry.data;

let ogImageUrl;

if ( slug === '' ) {
  ogImageUrl = getCldOgImageUrl({ 
    src: `${import.meta.env.PUBLIC_ASSETS_DIRECTORY}/astro-cloudinary-social-card-1.0`
  });
} else {
  ogImageUrl = getCldOgImageUrl({ 
    src: `${import.meta.env.PUBLIC_ASSETS_DIRECTORY}/astro-cloudinary-social-card-template-1.0`,
    overlays: [{
      width: 1000,
      crop: 'fit',
      position: {
        y: -80
      },
      text: {
        color: 'white',
        fontFamily: 'Source Sans Pro',
        fontSize: 100,
        fontWeight: 'black',
        text: ogImageTitle || title,
        alignment: 'center',
        lineSpacing: -25
      }
    }]
  });
}
---
<Default {...Astro.props}><slot /></Default>

<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:secure_url" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="twitter:title" content={title} />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:image" content={ogImageUrl} />